{
  "name": "videojs-errors",
  "version": "4.5.0",
  "author": "Brightcove, Inc.",
  "description": "A Video.js plugin for custom error reporting",
  "license": "Apache-2.0",
  "main": "dist/videojs-errors.cjs.js",
  "module": "dist/videojs-errors.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brightcove/videojs-errors.git"
  },
  "keywords": [
    "videojs",
    "videojs-plugin"
  ],
  "generator-videojs-plugin": {
    "version": "7.3.2"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:*",
    "build:css": "node-sass src/plugin.scss dist/videojs-errors.css --output-style=compressed --linefeed=lf",
    "build:js": "rollup -c scripts/rollup.config.js",
    "prebuild:lang": "npm-run-all -s prebuild:lang:*",
    "prebuild:lang:chinese-s": "shx cp lang/zh-CN.json lang/zh-Hans.json",
    "prebuild:lang:chinese-t": "shx cp lang/zh-TW.json lang/zh-Hant.json",
    "build:lang": "vjslang --dir dist/lang",
    "postbuild:lang": "shx cp -R lang/* dist/lang/",
    "clean": "shx rm -rf ./dist ./test/dist ./lang/zh-Han*.json",
    "postclean": "shx mkdir -p ./dist ./test/dist",
    "docs": "doctoc README.md",
    "lint": "vjsstandard",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch",
    "start": "npm-run-all -p server watch",
    "pretest": "npm-run-all lint build",
    "test": "karma start scripts/karma.conf.js",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "watch": "npm-run-all -p watch:*",
    "watch:css": "npm run build:css -- -w",
    "watch:js": "npm run build:js -- -w",
    "posttest": "shx cat test/dist/coverage/text.txt",
    "prepublishOnly": "npm run build && vjsverify"
  },
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist"
    ]
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "dependencies": {
    "global": "^4.4.0",
    "video.js": "^7.17.0"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.31",
    "conventional-changelog-videojs": "^3.0.2",
    "doctoc": "^1.3.1",
    "husky": "^1.0.0-rc.13",
    "karma": "^4.4.1",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.13.1",
    "not-prerelease": "^1.0.1",
    "npm-merge-driver-install": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "pkg-ok": "^2.2.0",
    "postcss-cli": "^6.1.3",
    "rollup": "^2.61.1",
    "shx": "^0.3.2",
    "sinon": "^6.1.5",
    "videojs-generate-karma-config": "^5.3.1",
    "videojs-generate-postcss-config": "^2.1.1",
    "videojs-generate-rollup-config": "^7.0.0",
    "videojs-generator-verify": "^4.0.1",
    "videojs-languages": "^2.0.0",
    "videojs-standard": "^9.0.1"
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "npm run docs:toc",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
